{
  "name": "bitcave",
  "version": "0.1.0",
  "description": "AI-focused dashboard client with infinite canvas and extensible window system",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": "Bitcave Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "start": "electron .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "dashboard",
    "electron",
    "react",
    "typescript",
    "canvas",
    "code-execution",
    "rag"
  ],
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/turndown": "^5.0.5",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "global": "^4.4.0",
    "lucide-react": "^0.542.0",
    "node-pty": "^1.0.0",
    "path-browserify": "1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "15.6.6",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "turndown": "^7.2.1",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@types/react-syntax-highlighter": "15.5.13",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.34.0",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "files": [
      "dist/**/*"
    ]
  }
}
